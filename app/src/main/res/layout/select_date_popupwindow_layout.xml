<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:clickable="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafafa"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingLeft="15dp"
                android:text="选择日期"
                android:textColor="#999999"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/select_date_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="15dp"
                android:text="确定"
                android:textColor="#333333"
                android:textSize="17sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:orientation="horizontal">

            <com.example.jiashuai.calendarview.xiaoziqianbao.calendarview.loopView.LoopView
                android:id="@+id/year_loop_view"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                app:awv_isLoop="false"
                app:awv_dividerTextColor="0xffefefef"
                app:awv_textsize="17" />

            <com.example.jiashuai.calendarview.xiaoziqianbao.calendarview.loopView.LoopView
                android:id="@+id/month_loop_view"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_weight="1"
                app:awv_isLoop="false"
                app:awv_dividerTextColor="0xffefefef"
                app:awv_textsize="17" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>